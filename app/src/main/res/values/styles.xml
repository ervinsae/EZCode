<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="vpiTabPageIndicatorStyle">@style/PagerWidget.TabPageIndicator</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/theme_primary</item>
        <item name="colorPrimaryDark">@color/app_primary_accent</item>
        <item name="android:windowActionBarOverlay">false</item>
        <item name="android:windowEnableSplitTouch">false</item>
        <item name="android:splitMotionEvents">false</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="AppTheme.Transparent" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowActionBarOverlay">false</item>
    </style>
    <!-- Base application theme. -->


    <style name="SeparationLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.1dp</item>
        <item name="android:background">@color/line</item>
    </style>

    <style name="ToolBar">
        <item name="android:background">@color/theme_primary</item>
        <item name="android:textSize">@dimen/toolbar_title_text_size</item>
        <item name="android:textColor">@color/app_body_text_1</item>
        <item name="android:text">@string/app_name</item>
        <item name="android:elevation">6dp</item>
    </style>

    <style name="PagerTextAppearance.TabPageIndicator" parent="Widget">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/app_primary_accent</item>
    </style>
    <!-- Pager indicator style-->
    <style name="PagerWidget.TabPageIndicator" parent="Widget">
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/vpi__tab_indicator</item>
        <item name="android:paddingLeft">22dip</item>
        <item name="android:paddingRight">22dip</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:textAppearance">@style/PagerTextAppearance.TabPageIndicator</item>
        <item name="android:textSize">16sp</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="MyCustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/all_track_color</item>
        <item name="tabIndicatorHeight">0dp</item>
        <item name="tabPaddingStart">2dp</item>
        <item name="tabPaddingEnd">2dp</item>
        <item name="tabBackground">@color/app_white</item>
        <item name="tabSelectedTextColor">@color/app_primary_accent</item>
    </style>
    <style name="MyCustomTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/all_track_color</item>
        <item name="textAllCaps">false</item>
    </style>
</resources>
